@using Microsoft.AspNetCore.Authorization
@using noMoreAzerty_dto.DTOs.Response
@using noMoreAzerty_front.Handlers
@using static noMoreAzerty_front.Services.VaultEntryService
@inject NavigationManager Navigation
@inject VaultService VaultService
@inject VaultKeyManager KeyManager
@inject ISnackbar _snackbar
@attribute [Authorize]

<MudDialog>
    <TitleContent>Enter Password</TitleContent>
    <DialogContent>
        <MudTextField Variant="Variant.Outlined"
                      Margin="Margin.Dense" 
                      Label="Password" 
                      @bind-Value="Password"
                      InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                      Required="true"
                      Adornment="Adornment.End"
                      AdornmentIcon="@(_showPassword ? Icons.Material.Filled.VisibilityOff : Icons.Material.Filled.Visibility)"
                      OnAdornmentClick="@ToggleShowPassword" />
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <MudText Color="Color.Error">@ErrorMessage</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public GetVaultResponse Vault { get; set; } = default!;

    private string Password { get; set; } = string.Empty;
    private string ErrorMessage { get; set; } = string.Empty;
    private bool _showPassword = false;

    private void ToggleShowPassword()
    {
        _showPassword = !_showPassword;
    }

    private async Task Submit()
    {
        try
        {
            // Déverrouiller le vault
            var success = await KeyManager.UnlockVaultAsync(
                Vault.Id,
                Password,
                Vault.PasswordSalt
            );
            
            if (!success)
            {
                _snackbar.Add("Invalid password", Severity.Error);
                return;
            }
            
            // Stocker les infos basiques
            VaultService.CurrentVault = Vault;
            VaultService.Salt = Vault.PasswordSalt;
            
            MudDialog.Close();
            Navigation.NavigateTo($"/vaults/{Vault.Id}");
        }
        catch (Exception ex)
        {
            _snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}